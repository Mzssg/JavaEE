<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>/jsp/index.jsp</welcome-file>
    </welcome-file-list>

    <resource-ref>
        <description>mysql数据库连接池</description>
        <res-ref-name>jdbc/mysqlds</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>

    <context-param>
        <param-name>webAppRootKey</param-name>
        <param-value>web.root</param-value>
    </context-param>
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>main.com.example.springbootdemo.servlet.login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>main.com.example.springbootdemo.servlet.registered</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>apply</servlet-name>
        <servlet-class>main.com.example.springbootdemo.servlet.applyhomework</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>apply</servlet-name>
        <url-pattern>/apply</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>student</servlet-name>
        <servlet-class>main.com.example.springbootdemo.servlet.addstudent</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>student</servlet-name>
        <url-pattern>/student</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>homework</servlet-name>
        <servlet-class>main.com.example.springbootdemo.servlet.addhomework</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>homework</servlet-name>
        <url-pattern>/homework</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>checkhomework</servlet-name>
        <servlet-class>main.com.example.springbootdemo.servlet.checkhomework</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>checkhomework</servlet-name>
        <url-pattern>/checkhomework</url-pattern>
    </servlet-mapping>
</web-app>