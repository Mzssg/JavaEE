<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>com.example.springbootdemo.servlet.login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.example.springbootdemo.servlet.registered</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>apply</servlet-name>
        <servlet-class>com.example.springbootdemo.servlet.applyhomework</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>apply</servlet-name>
        <url-pattern>/apply</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>student</servlet-name>
        <servlet-class>com.example.springbootdemo.servlet.addstudent</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>student</servlet-name>
        <url-pattern>/student</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>homework</servlet-name>
        <servlet-class>com.example.springbootdemo.servlet.addhomework</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>homework</servlet-name>
        <url-pattern>/homework</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>checkhomework</servlet-name>
        <servlet-class>com.example.springbootdemo.servlet.checkhomework</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>checkhomework</servlet-name>
        <url-pattern>/checkhomework</url-pattern>
    </servlet-mapping>
</web-app>
